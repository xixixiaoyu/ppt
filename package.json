{
  "name": "vue-ppt",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=10.13.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:format": "pnpm lint && pnpm format",
    "prepare": "husky"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "echarts": "^6.0.0",
    "three": "^0.180.0",
    "vue": "^3.5.18",
    "vue-echarts": "^8.0.1",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@types/three": "^0.180.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.4.49",
    "prettier": "^3.7.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vue-tsc": "^3.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
